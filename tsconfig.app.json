{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "**/node_modules/**", "**/dist/**"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    },
    "moduleResolution": "node",
    "allowJs": true,
    "strict": false
  },
  "types": ["tailwindcss"]
}
